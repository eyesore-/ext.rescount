{
  "manifest_version": 2,

  "name": "Response Count",
  "description": "",
  "version": "0.0.1",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": ""
  },

  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      "js": ["init.js"],
      "run_at": "document_end"
    }
  ],

  "background": {
    "scripts": ["index.js"],
    "persistent": false
  },

  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ]
}
